<div class="results-block col-9">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card mt-3 col-9">
    <div class="card-header">
      Friend Information
    </div>

    <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3">
      <div><strong>Name:</strong> <%= @friend %></div>
      <div><strong>Email:</strong> <%= @friend %></div>
      <div><strong>Profile: </strong> <%= @friend %></div>

      <%= link_to 'Follow Friend', 
          '#',
          method: :post,
          class: "btn btn-sm btn-success" %>
    </div>
  </div>
<% end %>
