<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.ticker %></th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td><%= link_to "Remove", user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sx btn-warning" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>